{
    "name": "phgasnets-dev",
    "build" : {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "vscode",
    "remoteEnv": {
        "PROJECT_DIR": "${containerWorkspaceFolder}",
        "BUILD_DIR": "${containerWorkspaceFolder}/build",
        "OUT_DIR": "${containerWorkspaceFolder}/results"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools-extension-pack",
                "ms-python.python",
                "shardulm94.trailing-spaces"
            ]
        }
    }
}